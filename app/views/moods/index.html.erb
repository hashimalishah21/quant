<nav class="sub-header-nav-bar">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h3>Moods</h3>
      </div>
      <div class="col-sm-6">
        <ul class="state-switcher pull-right">
          <li><%= link_to 'Add Mood', new_mood_path %></li>
          <li class="active"><a href="#">Raw Data</a></li>
          <li class="disabled"><a href="#">Summary</a></li>
        </ul>
      </div>
    </div>
  </div>
</nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-lg-10 col-lg-offset-1">
      <table class="table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Rating</th>
            <th>Description</th>
            <th class="hidden-xs">API</th>
            <th class="hidden-xs"></th>
            <th class="hidden-xs"></th>
          </tr>
        </thead>

        <% @moods_grouped_by_date.keys.each do |key| %>
          <tr>
            <td><%= key.to_formatted_s(:day_month_and_year) %></td>
            <td><strong><%= (@moods_grouped_by_date[key].sum(&:rating) / @moods_grouped_by_date[key].count).round(1) %></strong></td>
            <td class="hidden-xs"></td>
            <td class="hidden-xs"></td>
            <td class="hidden-xs"></td>
          </tr>
          <% @moods_grouped_by_date[key].each do |mood| %>
            <tr>
              <td></td>
              <td><%= mood.rating %></td>
              <td><%= mood.description %></td>
              <td class="hidden-xs"><%= link_to 'JSON', mood_path(mood, format: :json) %></td>
              <td class="hidden-xs"><%= link_to 'Edit', edit_mood_path(mood) %></td>
              <td class="hidden-xs"><%= link_to 'Destroy', mood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
      <% end %>
      </table>
    </div>
  </div>
</div>
